<div class="home-page">
  <div class="container-fluid px-0 p-0 bg-pink">
  <div class="row g-0">

    <!-- Left side: Image with overlay text -->
    <div class="col-md-6 position-relative p-0 bg-pink">
      <img src="<%= asset_path('GC-lp.png') %>" class="w-100 h-100 position-absolute img-fit" alt="Background">

      <div class="position-relative z-1 d-flex justify-content-center align-items-center h-100">
        <div class="text-overlay text-white text-center">
          <h1 class="mb-4">Find Local Events</h1>

          <!-- Geolocation button -->
          <button class="btn btn-primary mb-3 w-100" id="search-button">Use current location</button>

          <p class="mb-3">Or enter a location to find events:</p>

          <!-- Manual location form -->
          <form action="/events" method="get">
            <div data-controller="address-autocomplete" data-address-autocomplete-api-key-value="<%= ENV["MAPBOX_API_KEY"] %>" class="mb-3 string optional event_location">
              <input type="text" name="location" data-address-autocomplete-target="address" class="form-control mb-2 d-none" placeholder="Enter location" required>
            </div>
            <button type="submit" class="btn btn-secondary w-100">Search</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Right side: Map -->
    <div class="col-md-6 p-0">
      <div id="map" class="w-100 min-vh-100">
        <%= render "shared/app_map" %>
      </div>
    </div>

  </div>
  </div>
</div>
